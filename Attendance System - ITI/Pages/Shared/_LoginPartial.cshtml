@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext dbContext
@{
    var fullname = "";
    if (SignInManager.IsSignedIn(User))
    {
        var user = (await UserManager.GetUserAsync(User));
        dbContext.Entry(user).Reference(u => u.Student).Load();
        dbContext.Entry(user).Reference(u => u.Instructor).Load();

         fullname = user.Instructor?.Name ?? user.Student?.Name;
    }
}
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="scroll-to-section" style="list-style-type:none">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @fullname</a>
        </li>
        <li class="scroll-to-section" style="list-style-type:none">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                <button  type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="scroll-to-section" style="list-style-type:none">
            <a class="dropdown-toggle" href="#" id="navbarLightDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Register
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarLightDropdownMenuLink" style="background-color:#2BCAA5">
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/InstractorRegister">Instructor</a></li>
                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/StudentRegister">Student</a></li>
            </ul>
    </li>
    <li class="scroll-to-section" style="list-style-type:none">
        <a  asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    }
