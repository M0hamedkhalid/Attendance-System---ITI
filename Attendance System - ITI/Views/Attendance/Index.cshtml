@model IEnumerable<Attendance_System___ITI.Models.Student>
@{
    ViewData["Title"] = "Students' Attendance";
    Layout = "~/Pages/Shared/_Layout1.cshtml";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1 class="h-3 my-3 title">@ViewBag.Title</h1>
        <div class="row justify-content-center align-items-center h-100">
            <select id="selectA" class = "form form-control" style = "width:350px">
                <option value="Attend">Attend</option>
                <option value="Leave">Leave</option>
            </select>
        </div>
        <hr />
        <table class="table text-center table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>

            <tbody id="Attend">
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Attend" asp-route-id="@item.Id" style="width:100px;color:black">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                </tr>
            }
            <tbody/>

            <tbody id="Leave">
            @foreach (var s in ViewBag.Attended){
                <tr>
                    <td>
                        <a asp-action="Leave" asp-route-id="@s.StudentId" style="width:100px;color:black">@s.Student.Name</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </main>
</div>

@section Scripts
{
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#Leave').hide();
            $('#Attend').show();
            $("#selectA").change(function () {
                var currentdata = $("#" + $(this).val());
                currentdata.show();

                $('#Leave').not(currentdata).hide();
                 $('#Attend').not(currentdata).hide();
            });
        })
    </script>
}
