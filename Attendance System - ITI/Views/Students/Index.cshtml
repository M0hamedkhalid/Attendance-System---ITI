@using Attendance_System___ITI.Models

@model IEnumerable<Attendance_System___ITI.Models.Student>

@{
    ViewData["Title"] = "List of Students";
}

<div class="container">
    <main role="main" class="pb-3">
        <h1 class="h-3 my-3 title">@ViewBag.Title</h1>

        <div class="row">
            <div class="col-4">
                <br />
                <p><a asp-action="Create" class="btn btn-info">Create New</a></p><br />
                <a asp-controller="Students" asp-action="Export" class="btn btn-success" >Export Student Data As ExcelSheet </a>
            </div>

            <div class="col-4">
                <br />
                @using (Html.BeginForm("Index", "Students", FormMethod.Get))
                {
                    @Html.DropDownList("DeptID", ViewBag.DeptID as SelectList , new { @class = "form form-control" , @style = "width:350px" })<br />
                    <input type="submit" value="Filter" class="btn btn-info" />
                }

            </div>
                <div class="col-4">
                <form asp-action="Index" method="post">
                    <div class="form-actions no-color">
                        <p>
                            Find by name: <input type="text" name="searchtext" value="@ViewData["CurrentFilter"]" class="form form-control" style="width:350px" /><br />
                            <input type="submit" value="Search" class="btn btn-info" /> |
                            <a asp-action="Index" class="btn btn-info">Back to Full List</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>

        <hr />

        <table class="table text-center table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.GraduationYear)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.GraduationGrade)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.Mobile)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.Faculty)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.University)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th class="th-lg">
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th class="th-lg">
                        @*@Html.DisplayNameFor(model => model.Credential)*@
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GraduationYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GraduationGrade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Faculty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.University)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>

                    @*<td>
                        <div
                            class="view view-cascade gradient-card-header blue-gradient narrower py-2 mx-4 mb-3 d-flex justify-content-between align-items-center">
       
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-white btn-rounded btn-sm px-2"><i class="fas fa-pencil-alt mt-0"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-white btn-rounded btn-sm px-2"><i class="fas fa-info-circle mt-0"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-white btn-rounded btn-sm px-2"><i class="far fa-trash-alt mt-0"></i></a>
                            </div>
                        </div>
                    </td>*@

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success" style="width:100px">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" style="width:100px">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:100px">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </main>
</div>
    
