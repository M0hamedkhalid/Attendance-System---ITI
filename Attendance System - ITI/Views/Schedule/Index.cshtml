@model Attendance_System___ITI.Models.Lecture
@{
    Layout = "~/Pages/Shared/_Layout1.cshtml";
    
    ViewData["Title"] = "Schedule";
}

    <link href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.css">
    <title>@ViewBag.Title</title>

    <style type="text/css">
			.field-validation-error {
				color: #ff0000;
			}
	</style>

    <div class="">
        <main role="main" class="">
            <br />
            <div class="row justify-content-center align-items-center h-100">
                <a asp-action="Create" asp-controller="Schedule" class="btn btn-info" style = "width:350px">Create New Schedule</a>
            </div>

            <hr />

            <div class="container">
			    <div id='calendar'></div>
		    </div>
        </main>
    </div>

    @section Scripts {
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
		<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
	
		<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
		<script src="//ajax.aspnetcdn.com/ajax/mvc/4.0/jquery.validate.unobtrusive.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.16.0/moment.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.0.1/fullcalendar.min.js"></script>
		
		<script type="text/javascript">	
			$(document).ready(function () {
				$('#calendar').fullCalendar({
        			header: {
            			left: 'prev,next today',
            			center: 'title',
            			right: 'month,agendaWeek,agendaDay'
					},

            		firstDay: 1, //The day that each week begins (Monday=1)
            		slotMinutes: 60,
            		events: '@Url.RouteUrl(new{ action="FindAllLectures", controller="Schedule"})'
        		});
    		});
		</script>
    
    }

